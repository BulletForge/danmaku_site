- if project.archive
  .btn-group
    %div
      = button_to "Download", user_project_archive_path(user, project), method: :get, class: "btn btn-primary"
    - if can?(:update, project)
      %div
        = button_to "Delete", user_project_archive_path(user, project), method: :delete, confirm: "Are you sure you want to delete this file?", class: "btn btn-danger"
  %br
  %strong File Size:
  = number_to_human_size(project.archive.attachment_file_size)
  %br
