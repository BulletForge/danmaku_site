<% semantic_form_for @user do |form| %>
  <% form.inputs do %>
    <% if form.object.new_record? %>
      <%=raw form.input :login, :label => "Username", :required => true %>
    <% end %>
    <%=raw form.input :email %>
    <%=raw form.input :password, :required => true if form.object.new_record? %>
    <%=raw form.input :password, :label => "Change password", :hint => "Leave this blank to keep it the same." unless form.object.new_record? %>
    <%=raw form.input :password_confirmation %>
    <%=raw form.input :admin if has_role?(:admin) %>
  <% end %>
  <%=raw form.buttons %>
<% end %>