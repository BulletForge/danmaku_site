<%= render :partial => 'management_toolbar', :locals => {:user => @user, :project => @project, :version => @version} %>

<div id="project-show">
  <div class="heading">
    <%= @project.title %>
    <span class="@version-number">(v <%= @version.version_number %>)</span>
  </div>

  <div class="body">
    <div class="project-left">
      <div id="images">
      </div>
      <%= render :partial => 'archive', :locals => {:user => @user, :project => @project, :version => @version} %>
      <div id="statistics">
        <div id="downloads">
          Version downloads: <%= @version.download_count %><br />
          Total downloads: <%= @project.downloads %><br />
        </div>
        <br/>
        <%= render :partial => 'votes', :locals => { :user => @user, :project => @project, :version => @version } %>
      </div>
    </div>

    <div class="project-right">
      Author: <%= link_to @project.user.login, user_path(@project.user) %><br/>
      Category: <%= @project.category.name %><br/>
      <% if @project.tags %>
        Tags:
        <% @project.tags.reverse.each do |tag| %>
          <%= link_to tag.name, projects_path(:search => {:tagged_with => tag.name}, :search_type => :tags) %>
        <% end %>
        <br/>
      <% end %>
      Last updated at: <%= @project.versions.last.created_at %><br/>
      <br/>
      <%= simple_format(sanitize(@version.description)) %>
    </div>
  </div>
</div>

<%= render :partial => "youtube", :locals => {:project => @project} %>
<%= render :partial => "version_list", :locals => {:user => @user, :project => @project} %>
<%= render :partial => "comments", :locals => {:user => @user, :project => @project, :version => @version} %>
